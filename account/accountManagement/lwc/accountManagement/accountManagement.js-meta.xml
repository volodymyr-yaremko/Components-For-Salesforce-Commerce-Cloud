<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Account Management</masterLabel>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
        <target>lightning__AppPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property name="showMembersTab" type="Boolean" label="Show Members Tab?" description="Should members tab?" default="true"/>
            <property name="membersTabLabel" type="String" label="Members Tab Name" description="The tab label for community members" default="Members"/>
            <property name="showCartsTab" type="Boolean" label="Show Carts Tab?" description="Should show cart tab?" default="true"/>
            <property name="cartsTabLabel" type="String" label="Carts Tab Name" description="The tab label for carts" default="Carts"/>
            <property name="permissionSetNames" type="String" label="Permission Set API Names" description="A comma seperated list of Permission Set API Names that should be added to new members" placeholder="B2BBuyer,Account_Switcher_User"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>